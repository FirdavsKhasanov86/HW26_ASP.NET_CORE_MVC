@model List<HW26_ASP.NET_CORE_MVC.Models.Person>
@{
	ViewData["Title"] = "SEARCH FULL NAME";
}

<h4 class="text-info">SearchFullName</h4>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>FirstName</th>
			<th>LastName</th>
			<th>MiddleName</th>

		</tr>
	</thead>
	<tbody>
		@if (Model.Count > 0)
		{
			foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td>@item.MiddleName</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td class="text-center" colspan="5">empty</td>
			</tr>
		}
	</tbody>
</table>

